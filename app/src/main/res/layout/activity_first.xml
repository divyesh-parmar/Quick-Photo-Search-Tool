<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context=".activity.FirstActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="5.2">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="980px"
            android:layout_height="860px"
            android:src="@drawable/logo2"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="720px"
                    android:layout_height="130px"
                    android:src="@drawable/title2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:gravity="center">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/btn_start"
                        android:layout_width="350px"
                        android:layout_height="330px"
                        android:src="@drawable/start_btn"/>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/sharebtn"
                    android:layout_width="140px"
                    android:layout_height="130px"
                    android:src="@drawable/share_btn"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/ratebtn"
                        android:layout_width="140px"
                        android:layout_height="130px"

                        android:src="@drawable/rate_btn"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/privacybtn"
                        android:layout_width="140px"
                        android:layout_height="130px"
                        android:src="@drawable/policy_btn"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>