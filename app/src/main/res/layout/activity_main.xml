<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/top_bg">

        <ImageView
            android:id="@+id/backy"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/back_btn"/>

        <com.div.quickphotosearchtool.utilclass.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:textColor="#FFF"
            android:layout_centerInParent="true"
            android:text="Search By Image"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp">

        <ImageView
            android:id="@+id/btn_searchu"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginTop="25px"
            android:src="@drawable/searchu_btn"/>

        <ImageView
            android:id="@+id/btn_gallery"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginTop="25px"
            android:src="@drawable/image_btn"/>

        <ImageView
            android:id="@+id/btn_camera"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginTop="25px"
            android:src="@drawable/camera_btn"/>

        <ImageView
            android:id="@+id/btn_create"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginTop="25px"
            android:src="@drawable/cancel_unpress"/>

    </LinearLayout>

</RelativeLayout>